{
    "manifest_version": 2,
    "name": "YouTube TV Switch Spoofer",
    "version": "1.1.0",
    "description": "Pretends to be a switch for youtube.com/tv",
    "homepage_url": "https://github.com/Muminwilmer/youtube-tv-spoofer",
    "author": "Vera",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://www.youtube.com/tv*"
    ],
    "web_accessible_resources": [
        "content.js",
        "background.js",
        "icons/icon-48.png",
        "icons/icon-96.png"
    ],
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Open YouTube TV"
    },
    "content_scripts": [{
        "matches": ["*://www.youtube.com/tv*"],
        "js": ["content.js"],
        "run_at": "document_start"
    }]
}
